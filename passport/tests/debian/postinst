#!/bin/sh
# postinst script for test-0.1
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

    chown -R www-data: /var/log/yandex/passport-frontend
    chown -R www-data: /usr/lib/yandex/passport-frontend

    # pick a config
    rm /usr/lib/yandex/passport-frontend/configs/current

    if [ -f /etc/yandex/environment.name ] && [ `cat /etc/yandex/environment.name` = 'intranet' ]
    then
        if [ `cat /etc/yandex/environment.type` = 'testing' ]
        then
            ln -s /usr/lib/yandex/passport-frontend/configs/testing-intranet /usr/lib/yandex/passport-frontend/configs/current
        else
            ln -s /usr/lib/yandex/passport-frontend/configs/intranet /usr/lib/yandex/passport-frontend/configs/current
        fi
    else
        if [ `cat /etc/yandex/environment.type` = 'development' ]
        then
            ln -s /usr/lib/yandex/passport-frontend/configs/testing /usr/lib/yandex/passport-frontend/configs/current
        else
            ln -s /usr/lib/yandex/passport-frontend/configs/`cat /etc/yandex/environment.type` /usr/lib/yandex/passport-frontend/configs/current
        fi
    fi
    ;;





    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
