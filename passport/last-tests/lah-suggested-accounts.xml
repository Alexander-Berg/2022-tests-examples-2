            <instance id="yu2">some_yandexuid_2</instance>
        </cookie>

        <cookie name="lah" func="genlah" pregeneration="1">
            <instance id="one">
                <arg name="version">2</arg>
                <arg name="row">70497;100500;1</arg>
            </instance>
            <instance id="two">
                <arg name="version">2</arg>
