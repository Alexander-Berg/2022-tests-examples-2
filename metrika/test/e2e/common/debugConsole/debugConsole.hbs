{{#*inline "defHeadCounterScripts"}}{{/inline}}
{{#*inline "head"}}
    <script>
        const generateArticle = (text, id) => {
            const articleJson = {
                "@id": id,
                "@context": "schema.org",
                "@type": "Article",
                "author": {
                    "@type": "Person",
                    "name": "Vasily Pupkin"
                },
                "url": "https://example.com/article/1#my-article",
                "headline": "Vasily's guide to writing pointless articles",
                "text": text,
                "datePublished": "2018-12-11T08:56:49Z",
                "dateModified": "2018-12-14T01:50:49Z",
                "about": {
                    "@type": "Thing",
                    "name": "Postmodern phylosophy"
                }
            };

            const articleTag = document.createElement('script');
            articleTag.innerHTML = JSON.stringify(articleJson);
            articleTag.setAttribute('type', 'application/ld+json');
            document.head.appendChild(articleTag);
        };

        generateArticle("This text is not very long...".repeat(30), 10);
        generateArticle("This text is not very long...", 11);
    </script>
{{/inline}}

{{#*inline "content"}}

    <script type="text/javascript">
        // Инициализация кода счетчика из local.js
        window.initCounterFromLocalJs = function () {
            var elementScript = document.createElement('script');
            elementScript.src = "{{ buildPath }}/e2e/local.js";
            document.head.appendChild(elementScript);
            return elementScript;
        };
    </script>

