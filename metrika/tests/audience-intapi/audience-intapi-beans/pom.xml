<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <properties>
        <schemas.server>https://audience-intapid.test.metrika.yandex.net</schemas.server>
    </properties>
    <parent>
        <groupId>ru.yandex.autotests.audience-intapi</groupId>
        <artifactId>audience-intapi</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <name>Аудитории IntAPI: бины</name>

    <artifactId>audience-intapi-beans</artifactId>
    <dependencies>
        <dependency>
            <groupId>ru.yandex.autotests.metrika</groupId>
            <artifactId>metrika-commons</artifactId>
            <version>1.3.24</version>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.logging.log4j</groupId>
                    <artifactId>log4j-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.4.1.3</version>
        </dependency>
        <dependency>
            <groupId>org.jkee.gtree</groupId>
            <artifactId>gtree</artifactId>
            <version>0.64</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.25</version>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-slf4j-impl</artifactId>
            <version>2.8.1</version>
            <exclusions>
                <exclusion>
                    <artifactId>slf4j-api</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.8.1</version>
            <exclusions>
                <exclusion>
                    <artifactId>log4j-api</artifactId>
                    <groupId>org.apache.logging.log4j</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-1.2-api</artifactId>
            <version>2.8.1</version>
        </dependency>
        <dependency>
            <groupId>ru.yandex.autotests.irt</groupId>
            <artifactId>test-utils</artifactId>
            <version>1.2-SNAPSHOT</version>
            <exclusions>
                <exclusion>
                    <groupId>ru.yandex.qatools.allure</groupId>
                    <artifactId>allure-junit-adaptor</artifactId>
                </exclusion>
                <exclusion>
                    <artifactId>mockito-all</artifactId>
                    <groupId>org.mockito</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>slf4j-log4j12</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>uk.com.robust-it</groupId>
            <artifactId>cloning</artifactId>
            <version>1.9.2</version>
        </dependency>
    </dependencies>
    <build>
        <!--<testSourceDirectory>src/main/java</testSourceDirectory>-->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>ru.yandex.autotests.metrika</groupId>
                <artifactId>json-schema-downloader-maven-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <id>download-schemes-paths</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>download-json-schemas</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <schemasEndpoint>${schemas.server}/internal/schema</schemasEndpoint>
                    <outputDirectory>target/generated-sources/schemas</outputDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jsonschema2pojo</groupId>
                <artifactId>jsonschema2pojo-maven-plugin</artifactId>
                <version>0.4.32</version>
                <configuration>
                    <sourceDirectory>${project.basedir}/target/generated-sources/schemas</sourceDirectory>
                    <outputDirectory>${project.basedir}/target/generated-sources/beans</outputDirectory>
                    <targetPackage>ru.yandex.audience.internal</targetPackage>
                    <generateBuilders>true</generateBuilders>
                    <includeDynamicAccessors>false</includeDynamicAccessors>
                    <targetVersion>1.8</targetVersion>
                    <useLongIntegers>true</useLongIntegers>
                    <useJodaDates>true</useJodaDates>
                    <useCommonsLang3>true</useCommonsLang3>
                </configuration>
                <executions>
                    <execution>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
