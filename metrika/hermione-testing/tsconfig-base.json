{
  "compilerOptions": {
    "importHelpers": true,
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es2018",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react",
    "lib": ["dom", "es2018", "esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@metrika/types",
      "./node_modules/@types"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "dist",
    "node_modules",
    "jest"
  ]
}
