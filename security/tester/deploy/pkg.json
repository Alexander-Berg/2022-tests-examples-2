{
    "meta": {
        "description": "Docker package for Skotty Enrollment Service",
        "maintainer": "buglloc <buglloc@yandex-team.ru>",
        "name": "skotty-tester",
        "version": "{revision}"
    },
    "build": {
        "build_type": "release",
        "target-platforms": [
            "DEFAULT-LINUX-X86_64"
        ],
        "targets": [
            "security/skotty/tester/cmd/tester",
            "security/skotty/tester/cmd/fakers",
            "security/tools/starter/cmd/starter"
        ]
    },
    "data": [
        {
            "destination": {
                "path": "/Dockerfile"
            },
            "source": {
                "path": "Dockerfile",
                "type": "RELATIVE"
            }
        },
        {
            "destination": {
                "path": "/tester"
            },
            "source": {
                "path": "security/skotty/tester/cmd/tester/tester",
                "type": "BUILD_OUTPUT"
            }
        },
        {
            "destination": {
                "path": "/fakers"
            },
            "source": {
                "path": "security/skotty/tester/cmd/fakers/fakers",
                "type": "BUILD_OUTPUT"
            }
        },
        {
            "destination": {
                "path": "/starter"
            },
            "source": {
                "path": "security/tools/starter/cmd/starter/starter",
                "type": "BUILD_OUTPUT"
            }
        }
    ]
}
