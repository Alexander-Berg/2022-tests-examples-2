{
    "rulesDirectory": ["../../../dist"],
    "rules": {
        "disallowed-substring": [
            true,
            [
                {
                    "pattern": "restrictedString",
                    "message": "This string is restricted"
                },
                {
                    "pattern": "part",
                    "caseSensitive": false
                },
                {
                    "pattern": "\\d",
                    "message": "Restricted by regexp"
                },
                {
                    "pattern": "commonActions.form.load",
                    "message": "Use 'commonActions.form.strict.load' instead"
                }
            ]
        ]
    }
}
