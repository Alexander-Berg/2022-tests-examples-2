{
    "compilerOptions": {
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/mocha-framework",
            "expect-webdriverio"
        ],
        "target": "es2019",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "outDir": "./dist"
    }
}
