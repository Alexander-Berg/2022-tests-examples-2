{
    "rulesDirectory": ["../../../dist"],
    "rules": {
        "restricted-imports": [
            true,
            [
                {
                    "path": "react",
                    "message": "'xxx'",
                    "resolvePath": false,
                    "checkExports": true
                },
                {
                    "path": "lodash",
                    "message": "'yyy'"
                },
                {
                    "path": "amber-blocks",
                    "imports": ["Button"],
                    "message": "'zzz'",
                    "resolvePath": false,
                    "exact": true,
                    "checkExports": true
                },
                {
                    "path": "../types/api/",
                    "message": "'_types/api'",
                    "resolvePath": false
                }
            ]
        ]
    }
}
