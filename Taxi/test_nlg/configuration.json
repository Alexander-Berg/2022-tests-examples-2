{
  "nlg": {
    "concatenate_messages": false,
    "concatenate_separator": "[NEW]",
    "enrich": [
      {
        "add_at": "begin",
        "if_feature": "do_greeting",
        "template": "greeting"
      },
      {
        "add_at": "begin",
        "if_feature": "do_greeting_with_name",
        "template": "greeting_with_name"
      }
    ],
    "localisations": {
      "greeting": {
        "en": "Good afternoon!",
        "ru": "Добрый день!",
        "uk": "Добрий день!"
      },
      "greeting_with_name": {
        "en": "Good afternoon! {user_first_name}",
        "ru": "Добрый день! {user_first_name}",
        "uk": "Добрий день! {user_first_name}"
      }
    }
  }
}
