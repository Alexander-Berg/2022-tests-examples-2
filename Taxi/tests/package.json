{
  "name": "@lavka/tests",
  "private": true,
  "version": "1.0.0",
  "sideEffects": false,
  "main": "index.ts",
  "scripts": {
    "lint": "run-p lint:*",
    "lint:code": "eslint --ext .ts,.tsx,.js,.jsx .",
    "lint:types": "tsc --noEmit",
    "fix-code": "eslint --quiet --fix --ext .js,.jsx,.ts,.tsx",
    "fix": "npm run fix-code -- .",
    "precommit": "lint-staged --vcs-adapter @yandex-int/si.ci.lint-staged-arc-workflow",
    "build": "tsc -p ."
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run fix-code --"
    ],
    "*.mdx": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "typescript": "4.4.4"
  }
}
