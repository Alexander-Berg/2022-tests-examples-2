#!/bin/sh

set -e

case "$1" in
    configure)
        
        if ! dpkg-statoverride --list /var/log/yandex/taxi-test-service >/dev/null 2>&1; then
            dpkg-statoverride --update --add www-data www-data 0755 /var/log/yandex/taxi-test-service
        fi
        if ! dpkg-statoverride --list /var/lib/yandex/taxi-test-service >/dev/null 2>&1; then
            dpkg-statoverride --update --add www-data www-data 0755 /var/lib/yandex/taxi-test-service
        fi

        install -m 0700 -o www-data -g www-data -d /var/lib/yandex/taxi-test-service/private

        CACHE_DIR=/home/service/cache/dir/taxi-test-service
        mkdir -p $CACHE_DIR
        if dpkg-statoverride --list $CACHE_DIR >/dev/null 2>&1; then
            if [ "$(dpkg-statoverride --list $CACHE_DIR 2>&1)" != "www-data www-data 755 $CACHE_DIR" ]; then
                dpkg-statoverride --remove $CACHE_DIR
            fi
        fi
        if ! dpkg-statoverride --list $CACHE_DIR >/dev/null 2>&1; then
            dpkg-statoverride --update --add www-data www-data 0755 $CACHE_DIR
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
