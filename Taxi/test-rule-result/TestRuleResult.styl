.PriceConversionTestRuleForm {
    &__status {
        display: inline-block;
        color: $white;
        padding: 0.5 * 4px;

        &_fail {
            background-color: $red;
        }

        &_ok {
            background-color: $green;
        }
    }

    &__title {
        text-align: center;
    }

    &__error {
        background-color: $grey20;
        padding: 0.5 * 4px;
    }

}
