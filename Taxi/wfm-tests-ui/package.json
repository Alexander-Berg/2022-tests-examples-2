{
    "name": "wfm-tests-ui",
    "author": "Samoylov Roman <rvsamoylov@yandex-team.ru>",
    "publishConfig": {
        "registry": "https://npm.yandex-team.ru"
    },
    "repository": {
        "type": "git",
        "url": "https://github.yandex-team.ru/taxi/wfm-tests-ui.git"
    },
    "scripts": {
        "cypress:unstable": "npx cypress run --browser electron --config baseUrl=https://wfm.taxi.dev.yandex.ru",
        "cypress:testing": "npx cypress run --browser electron --config baseUrl=https://wfm.taxi.tst.yandex.ru",
        "test": "npx cypress run --headless --browser chromium --config baseUrl=https://wfm.taxi.tst.yandex.ru"
    },
    "devDependencies": {
        "cypress": "^8.2.0",
        "cypress-cucumber-preprocessor": "^2.5.4",
        "cypress-file-upload": "^4.1.1",
        "cypress-nhover": "^1.0.0",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-cypress": "^2.11.2",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "dayjs": "^1.10.6"
    },
    "dependencies": {
        "cypress-xpath": "^1.6.0"
    },
    "lint-staged": {
        "*.{js, jsx}": [
            "npx eslint",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged"
        }
    }
}
