.PriceConversionTestResult {
    &__status {
        display: inline-block;
        color: $white;
        padding: 2px 12px;
        margin-left: 10px;
        border-radius: 4px;

        &_fail {
            background-color: $red;
        }

        &_ok {
            background-color: $green;
        }
    }

    &__title {
        text-align: center;
    }

    &__error {
        background-color: $grey20;
        padding: 2 * $unit;
    }

    &__highlight {
        padding: 10px 10px 20px 10px;
        background-color: #ff8585;
        &_yellow {
            background-color: #fffa9e;
        }
    }

    &__metadata {
        flex-grow: 1;
    }
}
