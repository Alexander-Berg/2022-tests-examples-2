{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "required": [
      "activity",
      "components",
      "participants"
    ],
    "properties": {
      "activity": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "components": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "participants": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string"
        }
      },
      "startrek_queue": {
          "type": "string",
          "pattern": "^[A-Z]+$"
      }
    }
  }
}
