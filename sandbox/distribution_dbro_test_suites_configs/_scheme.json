{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "deadline",
        "testsuites"
    ],
    "properties": {
        "deadline": {
            "type": "integer",
            "enum": [24, 48]
        },
        "settings": {
            "type": "object"
        },
        "testsuites": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "testsuites": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "project",
                            "id",
                            "assessors_platforms",
                            "manual_platforms",
                            "distribution_type",
                            "distribution_name",
                            "build_type"
                        ],
                        "properties": {
                            "project": {
                                "type": "string",
                                "enum": ["brocase", "zenlib_browser", "bro-morda-zen", "bropartners", "test_project"]
                            },
                            "id": {
                                "type": "string",
                                "minLength": 24
                            },
                            "distribution_type": {
                                "type": "string",
                                "enum": ["brands", "partners"]
                            },
                            "distribution_name": {
                                "type": "string",
                                "minLength": 1
                            },
                            "build_type": {
                                "type": "string",
                                "enum": ["alice", "noalice"]
                            },
                            "assessors_platforms": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "manual_platforms": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "comment": {
                                "type": "string"
                            },
                            "aggregate_manual_runs": {
                                "type": "boolean"
                            },
                            "aggregate_asessors_runs": {
                                "type": "boolean"
                            },
                            "tags": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "disable_assessors": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        }
    }
}