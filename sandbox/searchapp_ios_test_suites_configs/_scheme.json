{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "deadline",
        "testsuites"
    ],
    "properties": {
        "deadline": {
            "type": "integer",
            "enum": [24, 48]
        },
        "settings": {
            "type": "object"
        },
        "testsuites": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "testsuites": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "project",
                            "id",
                            "assessors_platforms",
                            "manual_platforms"
                        ],
                        "properties": {
                            "project": {
                                "type": "string",
                                "enum": ["mobsearchios", "morda", "test_project", "alice-app-ios"]
                            },
                            "id": {
                                "type": "string",
                                "minLength": 24
                            },
                            "assessors_platforms": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "manual_platforms": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "comment": {
                                "type": "string"
                            },
                            "filter_by_diff": {
                                "type": "boolean"
                            },
                            "aggregate_manual_runs": {
                                "type": "boolean"
                            },
                            "aggregate_asessors_runs": {
                                "type": "boolean"
                            },
                            "brand": {
                                "type": "string"
                            },
                            "tags": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "disable_assessors": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        }
    }
}
