{
    "compilerOptions": {
        "types": [
            "node",
            "jest",
            "jquery"
        ],
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ES2018",
        "module": "CommonJS",
        "jsx": "preserve",
        "baseUrl": ".",
        "composite": true,
        "incremental": true,
        "strict": true
    },
    "references": [
        {
            "path": "../../../js_libs/ts"
        },
        {
            "path": "../.."
        }
    ],
    "include": [
        "./**/*",
        "../../../schema"
    ],
    "exclude": [
        "oldViews",
        "overrideOuterCall",
        "overrideSimple",
        "overrideSubView",
        "simple",
        "replaceConst"
    ]
}
