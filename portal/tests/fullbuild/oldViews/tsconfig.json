{
    "compilerOptions": {
        "types": [
            "node",
            "jquery",
            "jest"
        ],
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ES2018",
        "module": "CommonJS",
        "jsx": "preserve",
        "composite": true,
        "incremental": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@block/*": [
                "desktop/*",
                "common/*"
            ],
            "@blockBase/*": [
                "common/*"
            ],
            "@lib/*": [
                "../../../../js_libs/ts/*"
            ]
        }
    },
    "include": [
        "./**/*",
        "../../../../schema"
    ],
    "references": [
        {
            "path": ".."
        },
        {
            "path": "../../../../js_libs/ts"
        }
    ]
}
