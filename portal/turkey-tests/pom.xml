    <modelVersion>4.0.0</modelVersion>
    <groupId>ru.yandex.autotests</groupId>
    <artifactId>turkey-web</artifactId>
    <name>Autotests Home Turkey</name>
    <version>1.2-SNAPSHOT</version>
    <packaging>pom</packaging>

    <scm>
